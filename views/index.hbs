<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Video to GIF Converter</title>
    <link rel="stylesheet" href="styles/styles.css" />
  </head>

  <div class="grid content-center text-white rows-2">
    {{! NAVBAR }}
    <nav class="bg-gray-900">
      <div>
        <div class="h-20 px-2 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <h1 class="flex justify-center text-6xl">
            GIF MAKER
          </h1>
        </div>
      </div>
    </nav>

    {{! BODY }}
    <body class="bg-gray-800">
      <div class="grid justify-center mt-20">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="grid grid-cols-1 justify-items-center">

            <input
              type="file"
              name="video"
              accept="video/*"
              class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100"
            />

            <label for="size">Size:</label>
            <input
              type="text"
              name="size"
              id="size"
              placeholder="Enter size (e.g., 640x480)"
            />

            <label for="duration">Duration (seconds):</label>
            <input
              type="text"
              name="duration"
              id="duration"
              placeholder="Enter duration (e.g., 5)"
            />

            <button
              type="submit"
              class="mt-20 rounded-md bg-indigo-600 px-3.5 py-2.5 text-2xl font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >
              Convert to GIF
            </button>

          </div>
        </form>
      </div>
    </body>
  </div>
</html>